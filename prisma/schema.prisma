generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  createdAt    DateTime @default(now())

  account      Account?
  trades       Trade[]
  positions    Position[]
  withdrawals Withdrawal[]

}

model Account {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  usdtCash  Float    @default(100000)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Position {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  symbol    String
  qty       Float
  avgPrice  Float
  updatedAt DateTime @updatedAt

  @@unique([userId, symbol])
}

model Trade {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  side      String   // "BUY" | "SELL"
  symbol    String
  qty       Float
  price     Float
  notional  Float
  createdAt DateTime @default(now())
}
model Withdrawal {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  asset     String   // npr "USDT"
  amount    Float
  status    String   // "PENDING" | "APPROVED" | "REJECTED"
  note      String?
  createdAt DateTime @default(now())
}
