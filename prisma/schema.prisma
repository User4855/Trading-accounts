generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  createdAt    DateTime @default(now())

  account      Account?
  trades       Trade[]
  positions    Position[]
}

model Account {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  usdtCash  Float    @default(100000)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Position {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  symbol    String
  qty       Float
  avgPrice  Float
  updatedAt DateTime @updatedAt

  @@unique([userId, symbol])
}

model Trade {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  side      String   // "BUY" | "SELL"
  symbol    String
  qty       Float
  price     Float
  notional  Float
  createdAt DateTime @default(now())
}
